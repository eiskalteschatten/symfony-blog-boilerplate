{% extends 'security/_layout.html.twig' %}

{% block title %}{% trans from 'security' %}Login{% endtrans %}{% endblock %}
{% block card_title %}{% trans from 'security' %}Welcome to the Blog!{% endtrans %}{% endblock %}

{% block form %}
{% if error %}
    <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path('app_login') }}" method="post">
    <div class="mb-3">
        <label for="username" class="form-label required">{% trans from 'security' %}Username{% endtrans %}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control">
    </div>

    <div class="mb-3">
        <label for="password" class="form-label required">{% trans from 'security' %}Password{% endtrans %}</label>
        <input type="password" id="password" name="_password" required="required" class="form-control">
    </div>

    {# If you want to control the URL the user is redirected to on success
    <input type="hidden" name="_target_path" value="/account"> #}

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
    <button type="submit" class="btn btn-primary mt-3 w-100">{% trans from 'security' %}Log In{% endtrans %}</button>
</form>
{% endblock %}

{% block auth_footer %}
{% trans from 'security' %}Don't have an account yet?{% endtrans %} <a href="{{ path('app_register') }}">{% trans from 'security' %}Create an Account{% endtrans %}</a>
{% endblock %}
