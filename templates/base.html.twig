<!DOCTYPE html>
<html data-bs-theme="auto">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="theme-color" content="#000000" />
        <meta name="color-scheme" content="light dark">

        {% set page_title = 'Blog' %}
        <title>
            {% if block('title') is defined %}
                {{ block('title') | raw }} | {{ page_title }}
            {% else %}
                {{ page_title }}
            {% endif %}
        </title>

        <link rel="icon" href="{{ asset('images/favicon.svg') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('bootstrap') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        <script>
            (function() {
                const handleDarkModeChange = event => document.documentElement.setAttribute('data-bs-theme', event.matches ? 'dark' : 'light');
                window.matchMedia('(prefers-color-scheme: dark)').addEventListener('change', handleDarkModeChange);
                handleDarkModeChange(window.matchMedia('(prefers-color-scheme: dark)'));
            })()
        </script>
    </head>
    <body>
        {% block body %}{% endblock %}

        {% block javascripts_body_end %}
            {{ encore_entry_script_tags('bootstrap') }}
        {% endblock %}
    </body>
</html>
